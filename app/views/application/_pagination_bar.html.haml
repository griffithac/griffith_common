- if /index/ =~ params[:action] && @view_type != 'Calendar' then
  .col-md-8
    = eval("will_paginate @#{collection ||= params[:controller].pluralize}, inner_window: 1, outer_window: 1")
  .col-md-2.right
    .btn-group.dropup
      %button.btn.btn-default.dropdown-toggle{ href: "#", data: {toggle: "dropdown"} }
        Per Page
        %span.caret
      %ul.dropdown-menu{ role: "menu" }
        - %w[5 10 15 20 25 50 100].each do |per_page|
          %li= link_to per_page, eval("#{params[:controller].pluralize}_path( per_page: #{per_page} )")