- case current_action
  - when 'new' 
    = submit_tag "Create #{current_model_title(title ||= nil)}", class: 'btn btn-primary' if can? :create, current_model_class
  - when 'create' 
    = submit_tag "Create #{current_model_title(title ||= nil)}", class: 'btn btn-primary' if can? :create, current_model_class
  - when 'edit'
    = submit_tag "Update #{current_model_title(title ||= nil)}", class: 'btn btn-primary' if can? :update, current_object
  - when 'update'
    = submit_tag "Update #{current_model_title(title ||= nil)}", class: 'btn btn-primary' if can? :update, current_object
  - when 'show'
    = link_to "Edit #{current_model_title(title ||= nil)}", edit_current_resource_path, class: 'btn btn-primary' if can? :update, current_object
  - when 'event'
    = link_to "Edit #{current_model_title(title ||= nil)}", edit_current_resource_path, class: 'btn btn-primary' if can? :update, current_object

